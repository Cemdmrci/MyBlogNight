@model List<Article>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Author/Views/Shared/_WriterLayout.cshtml";
}

<br />
<div class="container">
	<h1 style="text-align:center; color:black">Yazılarım</h1>
	<table class="table table-striped" style="color:black">
		<tr>
			<th>Yazı Başlığı</th>
			<th>Yayınlanma Tarihi</th>
			<th>Sil</th>
			<th>Güncelle</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Title</td>
				<td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
				<td><a href="/Author/Article/DeleteArticle/@item.ArticleId" class="btn btn-danger">Sil</a></td>
				<td><a href="/Author/Article/UpdateArticle/@item.ArticleId" class="btn btn-danger">Güncelle</a></td>
			</tr>
		}
	</table>
	<a href="/Author/Article/CreateArticle" class="btn btn-primary">Yeni Yazı Ekle </a>
</div>
<br />


