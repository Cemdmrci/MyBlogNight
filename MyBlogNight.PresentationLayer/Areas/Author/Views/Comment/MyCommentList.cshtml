@model List<Comment>
@{
    ViewData["Title"] = "MyCommentList";
    Layout = "~/Areas/Author/Views/Shared/_WriterLayout.cshtml";
}


<br />
<div class="container">
	<h1 style="text-align:center; color:black">Yorumlarım</h1>
	<table class="table table-striped" style="color:black">
		<tr>
			<th>Yorumum</th>
			<th>Yorum Tarihi</th>
			<th>Sil</th>
			<th>Güncelle</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.CommentDetail</td>
				<td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
				<td><a href="/Author/Comment/DeleteComment/@item.ArticleId" class="btn btn-danger">Sil</a></td>
				<td><a href="/Author/Comment/UpdateComment/@item.ArticleId" class="btn btn-danger">Güncelle</a></td>
			</tr>
		}
	</table>
	<button type="submit" class="btn btn-primary w-100">Yorum Ekle</button>
</div>
<br />

