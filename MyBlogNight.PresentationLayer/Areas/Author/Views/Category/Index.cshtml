@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Author/Views/Shared/_WriterLayout.cshtml";
}

<br />
<div class="container">
	<h1 style="text-align:center; color:black">Kategorilerim</h1>
	<table class="table table-striped" style="color:black">
		<tr>
			<th>#</th>
			<th>Kategori Adı</th>
			<th>Sil</th>
			<th>Güncelle</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.CategoryId</td>
				<td>@item.CategoryName</td>
				<td><a href="/Author/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
				<td><a href="/Author/Category/UpdateCategory/@item.CategoryId" class="btn btn-danger">Güncelle</a></td>
			</tr>
		}
	</table>
	<a href="/Author/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Ekle </a>
</div>
<br />

