@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Author/Views/Shared/_WriterLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
	body {
		background-color: #f4f4f9;
	}

	.form-container {
		background: #fff;
		padding: 30px;
		border-radius: 10px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	h1 {
		font-size: 2rem;
		color: #333;
		text-align: center;
		margin-bottom: 30px;
	}

	label {
		font-weight: bold;
		color: #555;
	}

	.form-control {
		border-radius: 8px;
	}

	.btn-primary {
		background: #007bff;
		border: none;
		border-radius: 8px;
		padding: 10px 20px;
		transition: background 0.3s ease;
	}

		.btn-primary:hover {
			background: #0056b3;
		}
</style>

<div class="container mt-5">
	<div class="form-container">
		<h1>Kategori Güncelleme</h1>
		<form method="post">
			<div class="mb-4">
				<label for="Title">Kategori Adı</label>
				<input type="hidden" asp-for="CategoryId" />
				<input type="text" asp-for="CategoryName" class="form-control" placeholder="Kategori Adını buraya yazınız" />
			</div>
			<button type="submit" class="btn btn-primary w-100">Kategori Güncelle</button>
		</form>
	</div>
</div>

