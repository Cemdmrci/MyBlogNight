@model Article
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-12 align-self-center">
            <p class="lead"> Son Eklenen Yazı</p>
            <h2>@Model.Title</h2>
            <p class="lead"> @Model.Comments Substring(0, 100)...</p>
            <a href="/Default/ArticleDetail/@Model.ArticleId" class="btn btn-warning">Devamını Oku</a>
        </div>
        <div class="col-lg-4 col-md-12">
					@await Component.InvokeAsync("_DefaultNewsLetterComponentPartial")
				</div>
			</div>
		</div>
	</div>
